 /*pages/music/music.wxss*/
.banner {
    height: 448rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.body {
    color: #fff;
    font-family: Microsoft Yahei;
    background-color: #29292f;
}

.audio {
    text-align: center;
    padding-top: 10rpx;
}

.list {
    margin: 0 10rpx;
    color: #fff;
    padding-bottom: 10rpx;
}

.header {
    text-align: center;
    font-size: 36rpx;
}

.item {
    margin-top: 5rpx;
    display: flex;
    flex-direction: row;
    padding-top: 10rpx;
    background-color: rgba(0,0,0,0.1);
    color: #fff;
    border: 2rpx solid #333;
}

.button-hover {
    background-color: #ccc;
    border: 2rpx solid #fff;
    color: #000;
    opacity: 0.5;
}

icon {
    padding-top: 36rpx;
}

.detail {
    margin-left: 20rpx;
    line-height: 50rpx;
}

.name {
    text-align: left;
    font-size: 30rpx;
}

.author {
    opacity: 0.75;
    font-size: 24rpx;
}